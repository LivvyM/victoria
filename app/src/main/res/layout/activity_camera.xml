<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <net.ossrs.yasea.SrsCameraView
        android:id="@+id/glsurfaceview_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/shape_corner_live_shadow"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/mImageHeader"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0.6dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="victoria"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorCCC"
                    android:text="292人观看"
                    android:textSize="@dimen/text_size_11"
                    />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/mImageStart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_circle_live_shadow"
            android:src="@drawable/ic_live_start"
            android:paddingLeft="9dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="18dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_circle_live_shadow"
            android:src="@drawable/ic_live_send_message"
            android:padding="8dp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/mImageSet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_circle_live_shadow"
            android:src="@drawable/ic_live_set"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            />

        <Button
            android:id="@+id/publish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="开始" />

        <Button
            android:id="@+id/swCam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="摄像头" />


        <Button
            android:id="@+id/swEnc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="软编码" />
    </LinearLayout>

</RelativeLayout>
